<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    tools:context="com.embednet.wdluo.bleplatformsdkdemo.app.HistoryDataActivity">


    <include
        android:id="@+id/title"
        layout="@layout/title_layout" />


    <TextView
        android:id="@+id/dataTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="时段数据"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/mLineChartView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="20px"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="2018-03-10"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <lecho.lib.hellocharts.view.ColumnChartView
        android:id="@+id/mColumnChartView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/mRoundDisPlayView"
        android:padding="16dp"
        android:visibility="invisible" />


    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="20px" />-->


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/mRecyclerView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:visibility="invisible" />-->


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/powered"
        android:textColor="@color/white" />


</LinearLayout>
